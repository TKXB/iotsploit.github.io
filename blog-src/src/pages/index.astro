---
import { getCollection } from 'astro:content';
import BlogLayout from '../layouts/BlogLayout.astro';

// 获取所有博客文章
const posts = await getCollection('blog');
// 按发布日期排序，最新的在前
const sortedPosts = posts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
// 汇总热门标签
const allTags = Array.from(new Set(posts.flatMap((p) => (p.data.tags || []))));

// 从 markdown 正文中提取第一张图片（优先 Markdown 语法，其次 HTML img）
function extractFirstImageSrc(markdown) {
  if (!markdown || typeof markdown !== 'string') return undefined;
  const mdImg = markdown.match(/!\[[^\]]*\]\(([^)\s]+)(?:\s+\"[^\"]*\")?\)/);
  if (mdImg && mdImg[1]) return mdImg[1];
  const htmlImg = markdown.match(/<img[^>]*src=["']([^"']+)["'][^>]*>/i);
  if (htmlImg && htmlImg[1]) return htmlImg[1];
  return undefined;
}

// 计算封面图：frontmatter.image 优先，否则取正文第一张图片
const enrichedPosts = sortedPosts.map((p) => {
  const firstInBody = extractFirstImageSrc(p.body);
  return {
    ...p,
    coverImage: p.data.image || firstInBody,
  };
});
---

<BlogLayout title="IoTSploit 博客" isListing={true}>
  <div class="container">
    <div class="hero-section">
      <div class="hero-content">
        <p class="hero-subtitle">
          探索 IoT 安全测试的最新技术、工具和最佳实践
        </p>
        <div class="hero-tags">
          <span class="hero-tag"><i class="fa-solid fa-satellite-dish"></i> IoT</span>
          <span class="hero-tag"><i class="fa-solid fa-shield"></i> 安全</span>
          <span class="hero-tag"><i class="fa-solid fa-vial"></i> 测试</span>
          <span class="hero-tag"><i class="fa-solid fa-screwdriver-wrench"></i> 工具</span>
        </div>
      </div>
    </div>

    <div class="posts-section">
      <h2 class="section-title">最新文章</h2>
      <div class="posts-grid">
        {enrichedPosts.map((post) => {
          const category = (post.data.tags && post.data.tags[0]) ? post.data.tags[0] : '最新';
          return (
            <article class="post-card">
              {post.coverImage ? (
                <a href={`/blog/${post.slug}`} class="post-image-wrapper" aria-label={post.data.title}>
                  <img class="post-image" src={post.coverImage} alt={post.data.title} loading="lazy" />
                </a>
              ) : (
                <a href={`/blog/${post.slug}`} class="post-image-wrapper" aria-label={post.data.title}>
                  <img class="post-image" src="/images/blog-placeholder.svg" alt="placeholder" loading="lazy" />
                </a>
              )}

              <div class="post-card-content">
                <div class="category-label">{category.toUpperCase()}</div>

                <h3 class="post-title">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h3>

                <p class="post-description">
                  {post.data.description}
                </p>

                <div class="post-footer">
                  <span class="brand-badge" aria-hidden="true"></span>
                  <span class="footer-author">{post.data.author || 'IoTSploit'}</span>
                </div>
              </div>
            </article>
          );
        })}
      </div>
    </div>

    <div class="about-section">
      <div class="about-content">
        <h3 class="about-title">关于 IoTSploit</h3>
        <p class="about-description">
          IoTSploit 是一个强大的 IoT 安全测试工具集，提供协议分析、漏洞扫描、模糊测试等功能。
          通过我们的博客，了解最新的 IoT 安全威胁和防护方法。
        </p>
        <div class="about-actions">
          <a href="/" class="action-btn primary">
            <i class="fa-solid fa-house"></i>
            <span>访问主页</span>
          </a>
          <a href="/download.html" class="action-btn secondary">
            <i class="fa-solid fa-download"></i>
            <span>下载 IoTSploit</span>
          </a>
          <a href="https://github.com/TKXB/iotsploit" class="action-btn dark" target="_blank">
            <i class="fa-brands fa-github"></i>
            <span>GitHub</span>
          </a>
        </div>
      </div>
    </div>



    <div class="tags-section">
      <div class="tags-header">
        <h3 class="tags-title">热门标签</h3>
      </div>
      <div class="tags-cloud">
        {allTags.map((tag) => (
          <a href={`#tag-${tag}`} class="tag-chip">{tag}</a>
        ))}
      </div>
    </div>
  </div>
</BlogLayout>

