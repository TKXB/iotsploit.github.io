---
// 生成 /blog/ 的入口页（astro.config.mjs 设置了 base: '/blog'）
// 目的：确保 /blog/ 与 /blog/index.html 一定存在，并重定向到默认语言（zh）。
export const prerender = true;

const defaultPath = '/blog/zh/';
---
<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IoTSploit Documentation</title>
    <meta http-equiv="refresh" content={`0; url=${defaultPath}`} />
    <link rel="canonical" href={`https://www.iotsploit.org${defaultPath}`} />
    <script>
      // 立即跳转到中文文档首页
      window.location.replace({JSON.stringify(defaultPath)});
    </script>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #0b2a3a 0%, #103e53 100%);
        color: #fff;
      }
      .container {
        text-align: center;
        padding: 2rem;
      }
      h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }
      p {
        font-size: 1.1rem;
        opacity: 0.9;
      }
      a {
        color: #ff5c35;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>IoTSploit Documentation</h1>
      <p>正在跳转到文档首页...</p>
      <p>Redirecting to documentation...</p>
      <p style="margin-top: 1rem;">
        <a href="/blog/zh/">简体中文</a> |
        <a href="/blog/en/">English</a>
      </p>
      <noscript>
        <p style="margin-top: 1rem;">
          <a href={defaultPath}>继续前往文档首页</a>
        </p>
      </noscript>
    </div>
  </body>
</html>


